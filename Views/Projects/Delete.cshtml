@model Expense_Tracker_WebApp.Models.Projects
@{
    ViewData["Title"] = "Delete Project";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/5.1.3/darkly/bootstrap.min.css" rel="stylesheet" />

<h2>Delete Project</h2>

<div class="alert alert-danger">
    <h4 class="alert-heading">Are you sure you want to delete this project?</h4>
    <p>
        <strong>Project Name:</strong> @Model.ProjectName<br />
        <strong>Client Name:</strong> @Model.ProjectClientName<br />
        <strong>Project Link:</strong> @Model.ProjectLink<br />
        <strong>Gross Budget:</strong> @Model.GrossBudget<br />
        <strong>Net Budget:</strong> @Model.NetBudget<br />
        <strong>Budget in PKR:</strong> @Model.BudgetInPKR<br />
        <strong>Status:</strong> @Model.Status
    </p>
    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="ProjectId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
