<ejs-sidebar id="sidebar" width="290px" enableDock dockSize="100px"
             target=".dock-target" enableGestures="false">
    <e-content-template>

        <div class="logo-wrapper">
            <div class="app-logo">
                <img src="~/GreyLogo.png" class="w-50 h-50" />
            </div>
            <div class="w-100"></div>
            <i id="sidebar-toggler" class="fa-solid"></i>
        </div>

        <div class="profile-wrapper">
            <div class="profile-pic-initials">
                @{
                    var firstName = User.FindFirst("FirstName")?.Value;
                    var lastName = User.FindFirst("LastName")?.Value;
                    var initials = $"{firstName?.FirstOrDefault()}{lastName?.FirstOrDefault()}".ToUpper();
                }
                @initials
            </div>
            <div class="titles d-flex flex-column ps-3">
                <h6 class="mb-0">@firstName @lastName</h6>
            </div>
        </div>


        <ejs-menu id="menu"
                  items="menuItems"
                  orientation="Vertical"
                  hamburgerMode></ejs-menu>
    </e-content-template>
</ejs-sidebar>

<!-- Custom CSS -->
<style>
    .profile-pic-initials {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background-color: #6cabdb; /* You can change this color as needed */
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px; /* Adjust font size as needed */
        font-weight: bold;
        text-transform: uppercase;
    }

</style>
