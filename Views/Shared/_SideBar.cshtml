    menuItems.Add(new
    {
        text = "Dashboard",
        url = "/",
        iconCss = "fa-sharp-duotone fa-solid fa-table-columns",
    });

    menuItems.Add(new
    {
        text = "Accounts",
        url = "/Accounts",
        iconCss = "fa-sharp-duotone fa-solid fa-file-invoice-dollar",
    });

    menuItems.Add(new
    {
        text = "Start Bidding",
        url = "/Bids",
        iconCss = "fa-sharp-duotone fa-solid fa-file-contract",
    });

    menuItems.Add(new
    {
        text = "Projects",
        url = "/Projacts",
